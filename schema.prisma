datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String  @id @default(cuid())
  name     String?
  email    String? @unique
  password String?
  posts    Post[]  @relation("Post_author")
}

model Post {
  id              String    @id @default(cuid())
  orderId         Int?      @unique @default(autoincrement())
  title           String?
  status          String?
  short_content   Json?
  content         Json?
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_mode      String?
  image_id        String?
  meta_title      String?
  meta_desc       String?
  publishDate     DateTime?
  author          User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId        String?   @map("author")
  tags            Tag[]     @relation("Post_tags_Tag_posts")
  order           Int?

  @@index([authorId])
}

model Tag {
  id         String    @id @default(cuid())
  orderId    Int?      @unique @default(autoincrement())
  name       String?
  group      TagGroup? @relation("Tag_group", fields: [groupId], references: [id])
  groupId    String?   @map("group")
  posts      Post[]    @relation("Post_tags_Tag_posts")
  order      Int?
  meta_title String?
  meta_desc  String?

  @@index([groupId])
}

model TagGroup {
  id         String  @id @default(cuid())
  orderId    Int?    @unique @default(autoincrement())
  name       String?
  tags       Tag[]   @relation("Tag_group")
  order      Int?
  meta_title String?
  meta_desc  String?
}